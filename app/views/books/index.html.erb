<h1> All books</h1>

<div>
  <a href='/books/new'>New Book</a>
</div>

<% books.each do |book| %>
  <p>
    <b>Name: </b>
    <a href="/books/show?id=<%= book.id %>">
      <%= book.name %>
    </a>
  </p>
  <p><b>Author: </b><%= book.author %></p>
  <p><b>Pages: </b><%= book.pages %></p>
  <br>
<% end %>
